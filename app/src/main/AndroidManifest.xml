<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryan.poker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerCount"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".NamePlayers"
            android:parentActivityName=".PlayerCount" />
        <activity android:name=".GameState" />
        <activity android:name=".PlayGame" />
        <activity android:name=".GameOver" />
        <activity android:name=".RoundWinner"></activity>
    </application>

</manifest>